[Unit]
Description=LED Controller Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/led-controller
ExecStart=/usr/bin/python3 /home/pi/led-controller/led_controller.py --server http://YOUR_SERVER_IP:5005
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target